{% extends 'base.html.twig' %}

{% block title %}Checkout - Vice City E-Shop{% endblock %}

{% block body %}

<div class="checkout">
    <div class="container">
        <div class="checkout__header">
            <h1>Checkout</h1>
        </div>

        {# Checkout Steps #}
        <div class="checkout__steps">
            <div class="checkout__step active">
                <div class="checkout__step-number">1</div>
                <div class="checkout__step-label">Shipping</div>
            </div>
            <div class="checkout__step">
                <div class="checkout__step-number">2</div>
                <div class="checkout__step-label">Payment</div>
            </div>
            <div class="checkout__step">
                <div class="checkout__step-number">3</div>
                <div class="checkout__step-label">Review</div>
            </div>
        </div>

        <div class="checkout__grid">
            <div>
                {# Shipping Address #}
                <div class="checkout__section">
                    <div class="checkout__section-header">
                        <h2 class="checkout__section-title">
                            <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5l2.404.961L10.404 2l-2.218-.887zm3.564 1.426L5.596 5 8 5.961 14.154 3.5l-2.404-.961zm3.25 1.7-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923l6.5 2.6zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464L7.443.184z"/>
                            </svg>
                            Shipping Address
                        </h2>
                    </div>

                    <div class="checkout__addresses">
                        <button class="checkout__address-card active">
                            <div class="checkout__address-card-title">Home</div>
                            <address>
                                123 Ocean Drive<br>
                                Miami, FL 33139<br>
                                United States
                            </address>
                        </button>
                        <button class="checkout__address-card">
                            <div class="checkout__address-card-title">Work</div>
                            <address>
                                456 Vice Boulevard<br>
                                Los Santos, CA 90001<br>
                                United States
                            </address>
                        </button>
                    </div>
                </div>

                {# Payment Method #}
                <div class="checkout__section">
                    <div class="checkout__section-header">
                        <h2 class="checkout__section-title">
                            <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v1H0V4zm0 3v5a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7H0zm3 2h1a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1v-1a1 1 0 0 1 1-1z"/>
                            </svg>
                            Payment Method
                        </h2>
                    </div>

                    <div class="checkout__payment-methods">
                        <button class="checkout__payment-method active">
                            <div class="checkout__payment-method-icon">üí≥</div>
                            <div class="checkout__payment-method-info">
                                <h4>Credit Card</h4>
                                <p>Pay with Visa, Mastercard, or Amex</p>
                            </div>
                            <div class="checkout__payment-method-radio"></div>
                        </button>
                        <button class="checkout__payment-method">
                            <div class="checkout__payment-method-icon">üÖøÔ∏è</div>
                            <div class="checkout__payment-method-info">
                                <h4>PayPal</h4>
                                <p>Fast and secure payment</p>
                            </div>
                            <div class="checkout__payment-method-radio"></div>
                        </button>
                        <button class="checkout__payment-method">
                            <div class="checkout__payment-method-icon">üîê</div>
                            <div class="checkout__payment-method-info">
                                <h4>Cryptocurrency</h4>
                                <p>Pay with Bitcoin or Ethereum</p>
                            </div>
                            <div class="checkout__payment-method-radio"></div>
                        </button>
                    </div>
                </div>
            </div>

            {# Order Summary #}
            <aside>
                <div class="checkout__order-review">
                    <h2 class="checkout__order-review-title">Order Summary</h2>

                    <div class="checkout__order-review-items" data-cart-items>
                        <p class="text-center text-muted">No items in cart</p>
                    </div>

                    <div class="checkout__order-review-summary">
                        <div class="checkout__order-review-row">
                            <span>Subtotal</span>
                            <span class="checkout__order-review-value" data-cart-subtotal>$0.00</span>
                        </div>
                        <div class="checkout__order-review-row">
                            <span>Shipping</span>
                            <span class="checkout__order-review-value" data-cart-shipping>$0.00</span>
                        </div>
                        <div class="checkout__order-review-row">
                            <span>Tax</span>
                            <span class="checkout__order-review-value" data-cart-tax>$0.00</span>
                        </div>
                        <div class="checkout__order-review-row checkout__order-review-row--total">
                            <span>Total</span>
                            <span class="checkout__order-review-value" data-cart-total>$0.00</span>
                        </div>
                    </div>
                </div>

                <div class="checkout__actions">
                    <a href="{{ path('checkout_success') }}" class="btn btn--primary btn--full btn--lg">
                        Place Order
                    </a>
                    <a href="{{ path('cart') }}" class="btn btn--outline btn--full">
                        Back to Cart
                    </a>
                </div>
            </aside>
        </div>
    </div>
</div>

{% endblock %}
