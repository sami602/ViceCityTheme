{% extends 'base.html.twig' %}

{% block title %}Order Complete - Vice City E-Shop{% endblock %}

{% block body %}

<div class="order-success">
    <div class="order-success__icon">
        <svg width="60" height="60" fill="currentColor" viewBox="0 0 16 16">
            <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
        </svg>
    </div>

    <h1 class="order-success__title">Order Successful!</h1>
    <p class="order-success__subtitle">Thank you for your purchase. Your order has been confirmed.</p>

    <div class="order-success__order-number">
        Order Number: <strong>{{ order_number }}</strong>
    </div>

    <div class="order-success__actions">
        <a href="{{ path('account_orders') }}" class="btn btn--primary btn--lg">
            View Order Details
        </a>
        <a href="{{ path('products') }}" class="btn btn--secondary btn--lg">
            Continue Shopping
        </a>
    </div>

    <p class="text-center text-muted mt-2xl">
        A confirmation email has been sent to your email address.
    </p>
</div>

{% endblock %}
